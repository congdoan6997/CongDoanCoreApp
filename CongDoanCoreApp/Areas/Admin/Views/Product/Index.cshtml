    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Products <small>List products</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right ">

            <div class="input-group">
                <input type="text" class="form-control" id="txtSearchKeyword" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" id="btnSearch" type="button">Go!</button>
                </span>
            </div>
        </div>

        <div class="col-md-4 col-sm-12 pull-right ">
            <select class="form-control " id="ddlCategorySearch">
                <option value="">--Select category--</option>
            </select>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-12  pull-right ">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>

