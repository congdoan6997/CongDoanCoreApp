
@{
    ViewData["Title"] = "Role List";
}
@section Scripts{
    <script src="~/lib/jquery-treegrid/js/jquery.treegrid.js"></script>
    <script src="~/lib/jquery-treegrid/js/jquery.treegrid.bootstrap3.js"></script>
    <script src="~/app/controllers/role/index.js" asp-append-version="true"></script>
    <script>
        var roleController = new roleController();
        roleController.initialize();
    </script>
}
@section Styles{
    <link href="~/lib/jquery-treegrid/css/jquery.treegrid.css" rel="stylesheet" />

}
<div class="page-title">
    <div class="title_left">
        <h3>Roles <small> List role</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 form-group pull-right top-search">
            <div class="input-group">
                <input type="text" placeholder="Search for..." id="txtSearchKeyword" class="form-control" />
                <span class="input-group-btn">
                    <button type="button" id="btnSearch" class="btn btn-default">Go!</button>
                </span>
            </div>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-12 form-group  pull-right top_search">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="tblRole" class="table table-striped table-bordered nowrap dt-responsive" cellpadding="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th width="15%"></th>
                        </tr>
                    </thead>
                    <tbody id="tblContent"></tbody>
                </table>
                <!--pagiantion-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>{{Description}}</td>
        <td>
            <a href="#" id="{{Id}}" class="btn btn-sm btn-primary btn-grant"><i class="fa fa-eye-slash"></i></a>

            <a href="#" id="{{Id}}" class="btn btn-sm btn-info btn-edit"><i class="fa fa-pencil-square-o"></i></a>
            <a href="#" id="{{Id}}" class="btn btn-sm btn-danger btn-delete"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>

</script>


